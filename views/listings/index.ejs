   <!-- <h3>All Listings</h3> -->
        <!-- </div> -->
      
        <div class="filter">
          <a href="/listings/search?q=trending" class="filter text-decoration-none">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
          </a>
        </div>
